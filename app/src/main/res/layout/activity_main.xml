<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/roxo"
        android:padding="20sp"
        android:id="@+id/linear"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/infinity"
            android:layout_width="40sp"
            android:layout_marginLeft="20sp"
            android:layout_height="40sp"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_all_inclusive_24"
            />
        <ImageView
            android:id="@+id/sentimento"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/baseline_sentiment_very_satisfied_24"
            />

        <ImageView
            android:id="@+id/sol"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20sp"
            android:src="@drawable/baseline_wb_sunny_24" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/text_name_user"
        android:layout_margin="18sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        android:text="@string/app_hello"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="18sp"
        android:id="@+id/tag_state_description"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="@string/app_description"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="128sp"
        android:layout_height="5sp"
        android:layout_below="@+id/tag_state_description"
        android:background="@color/roxo"
        android:layout_centerInParent="true"
    />


    <RelativeLayout
        android:layout_width="300sp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:paddingBottom="20sp">

        <Button
            android:id="@+id/buttom_return"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:layout_marginBottom="50sp"
            android:backgroundTint="@color/roxo"
            android:text="Voltar"
            android:textAllCaps="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:cornerRadius="5sp" />

        <Button
            android:id="@+id/buttom_frase"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50sp"
            android:backgroundTint="@color/roxo"
            android:text="New frase"
            android:layout_alignParentEnd="true"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:cornerRadius="10sp" />
    </RelativeLayout>


</RelativeLayout>